{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "composite": true,
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
