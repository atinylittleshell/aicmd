{
  "name": "aicmd-monorepo",
  "version": "1.0.0",
  "description": "A CLI program that allows you to run shell commands using nautral language.",
  "author": "atinylittleshell",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atinylittleshell/aicmd.git"
  },
  "bugs": {
    "url": "https://github.com/atinylittleshell/aicmd/issues"
  },
  "keywords": [
    "ai",
    "cmd",
    "gpt",
    "chatgpt",
    "terminal"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "add:cli": "npm install -w aicmd",
    "dev:cli": "npm run dev:cli --workspaces --if-present",
    "build:cli": "npm run build:cli --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  }
}
